    .team__title
        padding 15.4% 0 16.3% 0

    .team__acco
        max-width 345px
        margin 0 auto
        text-align center

    .team__sect:not(:last-child)
        margin-bottom 8.5%

    .team__name
        font-size 24px

    .team__wrap
        flex-direction column
        padding 4% 0 0 0

    .team__pic
        margin 0 auto

    .team__desc
        max-width 100%
        padding 0
