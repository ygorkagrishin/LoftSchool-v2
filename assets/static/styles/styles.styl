    .burger
        .container
                align-items center

    .burger__carousel
        width 100%
        overflow hidden

    .burger__wrap
        display flex

    .burger__row 
        max-width 600px
        min-height 750px
        margin 0 auto

        flex-direction column
        text-align center

    .burger__hover
        width 320px
        padding-right 58px

