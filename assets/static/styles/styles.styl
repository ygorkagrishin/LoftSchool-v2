            margin 5.5% 0 4.5% 0

    .menu__title
        top 10.5%
        left 2.7%

    .menu__name
        top 89.5%
        left 4%

    .review__hover
        padding 7.5% 12%

    .review__col
        flex 1 0 50%
        text-align center

    .review__desc
        margin-bottom 8%
        h3
            margin-bottom 2%

    .review__popup
        max-width 472px
        padding 3% 2.5%
        h4
            margin-bottom 4%

    .form__title
        margin 16% 0 10% 0

    .form__form
        max-width 475px
        margin 0 auto    

    .form__field
        margin-bottom 6.8% !important
        flex-direction column
        // Переключаем margin у главных колонок
        & > .form__col:first-child
            margin 0 0 2.8% 0

    .form__textarea=
        padding 7px 20px

    .form__ghost
        display none


