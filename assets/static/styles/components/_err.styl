.err
    &__err
        position fixed
        top 0
        left 0
        z-index $z-index1
        display none
        width 100%
        height 100%
        text-align center
        background-color primaryBlackColor
        &.active
            display: flex
            justify-content center
            align-items center
    &__text
        font 48px / 1 baseFontMainTitle
        color primaryYellowColor

@media (orientation portrait) and (max-width 1024px)
    .err__text
        font-size 32px

@media (orientation portrait) and (max-width 480px),
(orientation landscape) and (max-width 960px)
    .err__text
        font-size 24px
