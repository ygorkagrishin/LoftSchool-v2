.header
    width 100%

.header__inner
    display flex
    padding 7px 0
    align-items center
    @media (orientation portrait) and (max-width 1024px)
        padding 1% 3%

.header__banner
    flex 2
    margin-left -3px

.header__order
    @media (orientation portrait) and (max-width 1024px)
        margin-right 3.9%

.header__menu
    display none
    @media (orientation portrait) and (max-width 1024px)
        display inline-block
    span 
        display block
        width 24px
        height 4px
        background-color primaryWhiteColor
        border-radius 5px
        &:not(:last-child)
            margin-bottom 5px