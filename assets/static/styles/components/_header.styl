.header
    width 100%

.header__inner
    display flex
    padding 7px 0
    align-items center

.header__banner
    flex 2
    margin-left -3px

.header__menu
    display none
    span 
        display block
        width 24px
        height 4px
        background-color primaryWhiteColor
        border-radius 5px
        &:not(:last-child)
            margin-bottom 5px

@media (orientation portrait) and (max-width 1024px),
(orientation landscape) and (max-width 960px)
    .header__inner
        padding 1% 3%

    .header__order
        margin-right 3.9%
    
    .header__menu
        display inline-block

@media (orientation portrait) and (max-width 480px)
    .header__inner
        padding 2.5% 2%
    
    .header__order
        margin-right 6.9%

@media (orientation portrait) and (max-width 425px)
    .header__banner
        svg 
            width 48% !important
            height 48% !important

@media (orientation landscape) and (max-width 960px)
    .header__banner
        svg 
            width 11% !important 
            height 11% !important