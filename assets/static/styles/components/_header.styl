.header
    width 100%

.header__inner
    display flex
    padding 7px 0
    align-items center
    @media (orientation portrait) and (max-width 1024px),
    (orientation landscape) and (max-width 960px)
        padding 1% 3%
    @media (orientation portrait) and (max-width 480px)
        padding 1.5% 2%

.header__banner
    flex 2
    margin-left -3px
    @media (orientation landscape) and (max-width 960px)
        svg 
            width 12% !important 
            height 12% !important

.header__order
    @media (orientation portrait) and (max-width 1024px),
    (orientation landscape) and (max-width 960px)
        margin-right 3.9%
    @media (orientation portrait) and (max-width 480px)
        margin-right 6.9%

.header__menu
    display none
    @media (orientation portrait) and (max-width 1024px),
    (orientation landscape) and (max-width 960px)
        display inline-block
    span 
        display block
        width 24px
        height 4px
        background-color primaryWhiteColor
        border-radius 5px
        &:not(:last-child)
            margin-bottom 5px