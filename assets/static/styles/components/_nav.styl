.navbar
    ul
        display flex
        @media (orientation portrait) and (max-width 1024px)
            position fixed
            top 0
            left 0
            z-index $z-index1
            display none
            width 100%
            height 100%
            flex-direction column
            justify-content center
            align-items center
            background-color rgba(primaryBlackColor,.99)
    li
        &:not(:last-child)::after
            content ''
            display inline-block
            width 4px
            height 4px
            vertical-align 3px
            background-color primaryWhiteColor 
            border-radius 50%
            @media (orientation portrait) and (max-width 1024px)
                display block
                margin 0 auto
                width 7px
                height 7px
    a
        display inline-block
        margin 0 15.5px
        font 13px / 30px baseFontMedium
        text-transform uppercase
        color primaryWhiteColor
        @media (orientation portrait) and (max-width 1024px)
            margin 20% 0
            font-size 24px
        &:hover
            text-decoration underline

.navbar__close
    display inline-block

.collapsed
    .navbar__close
        position absolute
        top 3.1%
        right 4.5%
        z-index $z-index1
        display none
    
